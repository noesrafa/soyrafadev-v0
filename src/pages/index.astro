<script is:inline>
  gsap.registerPlugin(ScrollTrigger);

  function playTimeline() {
    const myTimeline = gsap
      .timeline()
      .to("#project-cta", { scale: 1, opacity: 1, ease: "expo.out", duration: .1 })
      .to("#project-cta", { y: -50, ease: "back.out(2)", duration: 0.3 })
      .to(".cta-item", {
        scale: 1,
        stagger: 0.15,
        duration: 0.5,
        ease: "back.out",
      });

    return myTimeline;
  }

  function playTimelineBack() {
    const myTimeline = gsap
      .timeline()
      .to("#project-cta", { y: 0, duration: 0.25 })
      .to("#project-cta", { scale: 0, opacity: 0, duration: 0.1 })
      .to(".cta-item", { scale: 0, stagger: 0.1, duration: 0.1 });

    return myTimeline;
  }

  ScrollTrigger.create({
    trigger: ".trigger-element",
    start: "+=500 bottom", 
    end: "bottom",
    onEnter: () => playTimeline().play(), 
    onLeaveBack: () => playTimelineBack().play(),
  });
</script>

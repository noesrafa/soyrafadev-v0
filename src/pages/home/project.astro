---
import { Image } from "astro:assets";

interface Props {
  name: string;
  imageUrl: string;
  year: number;
}

const { name, imageUrl, year } = Astro.props;
---

<div>
  <div
    class="group relative w-full overflow-hidden aspect-square object-cover bg-tertiary  rounded-3xl flex items-center justify-center py-4 cursor-pointer"
  >
    <div
      class="absolute top-2 right-2 flex items-center justify-center h-9 w-9 rounded-full opacity-40 group-hover:opacity-100 group-hover:shadow group-hover:bg-primary transition"
    >
      <i class="ph ph-arrow-up-right"></i>
    </div>
    <p class="absolute bottom-2 left-4 opacity-40 group-hover:opacity-100 text-lg">{name}</p>
    <p class="absolute bottom-2 right-4 opacity-40 group-hover:opacity-100 text-lg">{year}</p>
    <Image
      loading="eager"
      src={imageUrl}
      alt={name}
      width={100}
      height={100}
      class:list={"w-full h-full"}
    />
  </div>
</div>
